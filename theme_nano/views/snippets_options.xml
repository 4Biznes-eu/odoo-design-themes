<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="li_colors">
        <li t-attf-data-select-class="{{el}}-white"><a href="#" class="white"/></li>
        <li t-attf-data-select-class="{{el}}-gray-lighter"><a href="#" class="gray-lighter"/></li>
        <li t-attf-data-select-class="{{el}}-gray"><a href="#" class="gray"/></li>
        <li t-attf-data-select-class="{{el}}-gray-darker"><a href="#" class="gray-darker"/></li>
        <br/>
        <li t-attf-data-select-class="{{el}}-alpha"><a href="#" class="color-alpha"/></li>
        <li t-attf-data-select-class="{{el}}-beta"><a href="#" class="color-beta"/></li>
        <li t-attf-data-select-class="{{el}}-gamma"><a href="#" class="color-gamma"/></li>
        <li t-attf-data-select-class="{{el}}-delta"><a href="#" class="color-delta"/></li>
        <li t-attf-data-select-class="{{el}}-epsilon"><a href="#" class="color-epsilon"/></li>
    </template>

    <template id="snippet_options" inherit_id="website.snippet_options">
        <!-- Background
        ========================================================================== -->
        <xpath expr="//div[@data-js='colorpicker']" position="attributes">
            <attribute name="data-selector">.no-colorpicker</attribute>
        </xpath>
        <xpath expr="//div[@data-js='colorpicker'][2]" position="attributes">
            <attribute name="data-selector">.no-colorpicker</attribute>
        </xpath>
        <xpath expr="//div[@data-js='background']" position="attributes">
            <attribute name="data-selector" add=".s_images_captions_fw [class*='col-'], .media-content, .media-options, .profile-body, .profile-options > [class*='col-'], .carousel-box-content, .s_three_columns_carousel [class*='col-'], .s_text_block_image_fw [class*='col-'], .news-carousel-time, .news-carousel-content, .s_color_blocks_4 [class*='col-md-']"/>
        </xpath>
        <xpath expr="//div[@data-js='background']/li" position="replace">
            <li class="dropdown-submenu">
                <a tabindex="-1" href="#"><i class="fa fa-picture-o"/>Background Image</a>
                <ul class="nano-bg-img-selector dropdown-menu">
                    <li data-select-class=""><a>None</a></li>
                    <li class="separator"/>
                    <li data-choose-image="true" data-no-preview="true"><a><b>Choose an image...</b></a></li>
                    <li class="separator"/>
                    <li class="col-2" data-select-class="bg-img-01"><a><img src="/web/image/theme_nano.bg_img_01/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-02"><a><img src="/web/image/theme_nano.bg_img_02/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-03"><a><img src="/web/image/theme_nano.bg_img_03/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-04"><a><img src="/web/image/theme_nano.bg_img_04/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-05"><a><img src="/web/image/theme_nano.bg_img_05/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-06"><a><img src="/web/image/theme_nano.bg_img_06/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-07"><a><img src="/web/image/theme_nano.bg_img_07/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-08"><a><img src="/web/image/theme_nano.bg_img_08/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-09"><a><img src="/web/image/theme_nano.bg_img_09/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-10"><a><img src="/web/image/theme_nano.bg_img_10/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-11"><a><img src="/web/image/theme_nano.bg_img_11/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-12"><a><img src="/web/image/theme_nano.bg_img_12/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-13"><a><img src="/web/image/theme_nano.bg_img_13/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-14"><a><img src="/web/image/theme_nano.bg_img_14/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-15"><a><img src="/web/image/theme_nano.bg_img_15/120x60" alt=""/></a></li>
                    <li class="col-2" data-select-class="bg-img-16"><a><img src="/web/image/theme_nano.bg_img_16/120x60" alt=""/></a></li>
                </ul>
            </li>
            <li class="dropdown-submenu">
                <a tabindex="-1" href="#">Colors</a>
                <ul class="nano-colorpicker dropdown-menu">
                    <li data-select-class=""><a href="#" class="none"/></li>
                        <t t-call="theme_nano.li_colors">
                            <t t-set="el">bg</t>
                        </t>
                </ul>
            </li>
            <li class="dropdown-submenu">
                <a tabindex="-1" href="#"><i class="fa fa-barcode"/>Background Patterns</a>
                <ul class="nano-patterns dropdown-menu">
                    <li data-select-class=""><a href="#" class="none">None</a></li>
                    <li class="separator"/>
                    <li class="col-2" data-select-class="bg-pattern-01"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_01');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-02"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_02');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-03"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_03');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-04"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_04');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-05"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_05');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-06"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_06');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-07"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_07');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-08"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_08');"></a></li>
                    <li class="col-2" data-select-class="bg-pattern-09"><a class="snippets-option-pattern" style="background-image:url('/web/image/theme_nano.bg_pattern_09');"></a></li>
                </ul>
            </li>
        </xpath>

        <!-- Layout
        ========================================================================== -->
        <xpath expr="//div[@data-js='content']" position="attributes">
            <attribute name="data-selector" add="hr, .s_label"/>
        </xpath>
        <xpath expr="//div[@data-js='margin-y']" position="attributes">
            <attribute name="data-selector" add="h1, h2, h3, h4, h5, h6"/>
        </xpath>
        <xpath expr="//div[@data-js='margin-x']" position="attributes">
            <attribute name="data-selector" add=".s_color_blocks_4 [class*='col-md-']"/>
            <attribute name="data-drop-near" add=".s_color_blocks_4 [class*='col-md-']"/>
        </xpath>
        <xpath expr="//div[@data-js='resize']" position="attributes">
            <attribute name="data-selector" add=".row .media"/>
        </xpath>

        <!-- Colors
        ========================================================================== -->

        <!-- LABEL -->
        <xpath expr="//div[@data-js='background']" position="before">
            <div data-selector=".s_label, .label">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#">Colors</a>
                    <ul class="nano-colorpicker dropdown-menu">
                        <t t-call="theme_nano.li_colors">
                            <t t-set="el">bg</t>
                        </t>
                    </ul>
                </li>
            </div>
        </xpath>

        <!-- PANEL (including tabs & collapse snippets) -->
        <xpath expr="//div[@data-js='colorpicker']" position="after">
            <div data-selector=".s_tabs [class*='col-'], .s_panel">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#">Colors</a>
                    <ul class="nano-colorpicker dropdown-menu">
                        <t t-call="theme_nano.li_colors">
                            <t t-set="el">panel</t>
                        </t>
                    </ul>
                </li>
            </div>
        </xpath>

        <!-- WELL -->
        <xpath expr="//div[@data-js='colorpicker']" position="after">
            <div data-selector=".s_well">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#">Colors</a>
                    <ul class="nano-colorpicker dropdown-menu">
                        <t t-call="theme_nano.li_colors">
                            <t t-set="el">well</t>
                        </t>
                    </ul>
                </li>
            </div>
        </xpath>

        <!-- Styles
        ========================================================================== -->
        <xpath expr="//div[@data-js='colorpicker']" position="after">
            <div data-selector="h1, h2, h3, h4, h5, h6">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><i class="fa fa-paint-brush"/>Style</a>
                    <ul class="dropdown-menu">
                        <li data-toggle-class="text-muted"><a href="#">Muted</a></li>
                        <li data-toggle-class="text-uppercase"><a href="#">Uppercase</a></li>
                        <li data-toggle-class="text-underline"><a href="#">Underline</a></li>
                        <li data-toggle-class="text-boxed"><a href="#">Boxed</a></li>
                    </ul>
                </li>
            </div>
        </xpath>
        <xpath expr="//div[@data-js='colorpicker']" position="after">
            <div data-selector="hr">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><i class="fa fa-arrows-h"/>Width</a>
                    <ul class="dropdown-menu">
                        <li data-select-class="hr-small"><a href="#">Small</a></li>
                        <li data-select-class="hr-half"><a href="#">Half</a></li>
                        <li data-select-class="hr-full"><a href="#">Full</a></li>
                    </ul>
                </li>
            </div>
            <div data-selector="hr">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><i class="fa fa-paint-brush"/>Style</a>
                    <ul class="dropdown-menu">
                        <li data-select-class="hr-dashed"><a href="#">Dashed</a></li>
                        <li data-select-class="hr-dotted"><a href="#">Dotted</a></li>
                        <li data-select-class="hr-solid"><a href="#">Solid</a></li>
                    </ul>
                </li>
            </div>
            <div data-selector="hr">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><i class="fa fa-arrows-b"/>Thickness</a>
                    <ul class="dropdown-menu">
                        <t t-foreach="range(1,6)" t-as="hr_size">
                            <li t-attf-data-select-class="hr-{{hr_size}}px"><a href="#"><t t-esc="hr_size"/> px</a></li>
                        </t>
                    </ul>
                </li>
            </div>
        </xpath>
    </template>

    <!-- PROGRESS BAR -->
    <template  id="snippet_options_progress_bar" inherit_id="theme_common.s_options_progress_bar">
        <xpath expr="//div[@data-js='progress']" position="replace">
            <div data-js="progress" data-selector=".progress .progress-bar">
                <li class="dropdown-submenu">
                <a tabindex="-1" href="#"><i class="fa fa-paint-brush"/>Style</a>
                    <ul class="dropdown-menu">
                        <li data-toggle-class="progress-bar-striped"><a>Striped</a></li>
                        <li data-toggle-class="active"><a>Active</a></li>
                    </ul>
                </li>
            </div>
        </xpath>
    </template>
</odoo>
