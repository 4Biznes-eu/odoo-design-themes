<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="demo_page_01_page" model="website.page">
    <field name="url">/demo_page_01</field>
    <field name="website_published">True</field>
    <field name="name">Nano // Demo 01</field>
    <field name="type">qweb</field>
    <field name="key">website.demo_page_01</field>
    <field name="arch" type="xml">
      <t t-name="website.demo_page_01">
        <t t-call="website.layout">
          <div id="wrap" class="oe_structure">
            <div class="s_banner_2 carousel slide" id="s_banner_2" style="height: 440px;">
              <ol class="carousel-indicators"><li data-slide-to="0" data-target="#s_banner_2"></li><li class="active" data-slide-to="1" data-target="#s_banner_2"></li><li data-slide-to="2" data-target="#s_banner_2"></li></ol>
              <div class="carousel-inner">
                <div class="item bg-img-06">
                  <div class="container">
                    <div class="row content">
                      <div class="col-md-4 col-md-offset-8 carousel-box-content mt64">
                        <h2>Slide title</h2>
                        <h5>Customize this text.</h5>
                        <p>Use this snippet to presents your content in a slideshow-like format, with a set number of items at a time and arrows for navigation.</p>
                        <p><a class="btn btn-default btn-sm" href="/aboutus">About us</a></p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="item active bg-img-07">
                  <div class="container">
                    <div class="row content">
                      <div class="col-md-4 col-md-offset-8 carousel-box-content bg-none mt64">
                        <h2 class="text-white">Slide title</h2>
                        <h5 class="text-primary">Customize this text.</h5>
                        <p class="text-white">This is a great component if you want visitors to browse through any featured content in a scrolling carousel.</p>
                        <p><a href="/" class="btn btn-primary btn-lg">Start now</a></p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="item bg-img-08">
                  <div class="container">
                    <div class="row content">
                      <div class="col-md-5 carousel-box-content mt64">
                        <h2>Slide title</h2>
                        <h5>Customize this text.</h5>
                        <p>Add and arrange blocks to create a custom layout of text, images and links.</p>
                        <p><a href="/" class="btn btn-default btn-lg">Read more</a></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="carousel-control left" data-slide="prev" data-target="#s_banner_2" href="#s_banner_2">
                <i class="fa fa-chevron-left fa-1x"/>
              </div>
              <div class="carousel-control right" data-slide="next" data-target="#s_banner_2" href="#s_banner_2">
                <i class="fa fa-chevron-right fa-1x"/>
              </div>
            </div>

            <div data-oe-call="theme_common.s_three_columns_carousel"/>
            <div class="mt48 mb48">
              <div data-oe-call="theme_common.s_features_circle"/>
            </div>
            <div data-oe-call="theme_common.s_news_carousel"/>
            <div class="mt64 mb64">
              <div data-oe-call="theme_common.s_team_profiles_2"/>
            </div>
            <div data-oe-call="website.s_cover"/>

            <div class="mb48 mt48">
              <div data-oe-call="theme_common.s_references_2"/>
            </div>

          </div>
        </t>
      </t>
    </field>
  </record>

  <record id="demo_page_menu" model="website.menu">
    <field name="name">Demo</field>
    <field name="url">/demo_page</field>
    <field name="parent_id" ref="website.main_menu"/>
    <field name="sequence" type="int">30</field>
  </record>

  <record id="demo_page_01_menu" model="website.menu">
    <field name="name">Demo 01</field>
    <field name="url">/demo_page_01</field>
    <field name="parent_id" ref="demo_page_menu"/>
    <field name="sequence" type="int">31</field>
    <field name="page_id" ref="demo_page_01_page"/>
  </record>

</odoo>
