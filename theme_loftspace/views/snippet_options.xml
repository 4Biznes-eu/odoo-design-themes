<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="theme_loftspace_website_options_pattern" inherit_id="website.snippet_options">
        <!-- Drop s_button_text into content -->
        <xpath expr="." position="inside">
            <div data-selector=".s_button_text"
                    data-drop-near=".s_banner_3 .hero-bg > *, .s_banner_parallax .hero-bg > *, p, span, h1, h2, h3, h4, h5, h6">
            </div>
        </xpath>

        <!-- Background image -->
        <xpath expr="//div[@data-js='background']/li" position="replace">
            <li class="dropdown-submenu">
                <a tabindex="-1" href="#"><i class="fa fa-picture-o"/> Background Image</a>
                <ul class="dropdown-menu">
                    <li data-select_class=""><a>None</a></li>
                    <li data-select_class="oe_custom_bg" data-choose_image="choose_image"><a><b>Choose another image...</b></a></li>
                    <li><a style="background: none; padding: 5px; border-top: 1px solid #ddd;"/></li>
                    <li data-select_class="bg-img-01"><a><img src="/web/image/theme_common.image_content_11/150x0" class="center-block"/></a></li>
                    <li data-select_class="bg-img-02"><a><img src="/web/image/theme_common.image_content_09/150x0" class="center-block"/></a></li>
                    <li data-select_class="bg-img-03"><a><img src="/web/image/theme_common.image_content_10/150x0" class="center-block"/></a></li>
                    <li data-select_class="bg-img-04"><a><img src="/web/image/theme_common.image_content_12/150x0" class="center-block"/></a></li>
                    <li data-select_class="bg-img-05"><a><img src="/web/image/theme_common.image_content_02/150x0" class="center-block"/></a></li>
                    <li data-select_class="bg-img-06"><a><img src="/web/image/theme_common.image_content_03/150x0" class="center-block"/></a></li>
                    <li data-select_class="bg-img-07"><a><img src="/web/image/theme_common.image_content_07/150x0" class="center-block"/></a></li>
                </ul>
            </li>
        </xpath>

        <xpath expr="//div[@data-js='background']" position="attributes">
            <attribute name="data-selector" add=".carousel, .color-block, .color-block4, headerwrap, .cube-big, .cube-small, .s_color_blocks_2_block"/>
        </xpath>

        <!-- BG colors -->
        <xpath expr="//div[@data-js='colorpicker']/li" position="replace">
            <li class="dropdown-submenu">
                <a tabindex="-1" href="#"><i class="fa fa-eyedropper"/> Colors</a>
                <ul class="dropdown-menu">
                    <table class="colorpicker">
                        <tr>
                            <td><button data-color="alpha"/></td>
                            <td><button data-color="beta"/></td>
                            <td><button data-color="gamma"/></td>
                            <td><button data-color="delta"/></td>
                            <td><button data-color="epsilon"/></td>
                            <td><button data-color="none">none</button></td>
                        </tr>
                        <tr>
                            <td><button data-color="black"/></td>
                            <td><button data-color="gray-dark"/></td>
                            <td><button data-color="gray"/></td>
                            <td><button data-color="gray-light"/></td>
                            <td><button data-color="white"/></td>
                        </tr>
                    </table>
                </ul>
            </li>
        </xpath>

        <xpath expr="//div[@data-js='colorpicker']" position="attributes">
            <attribute name="data-selector" add="section, .carousel, #footer, .copyright, .product-widget, .mask, .cube-small, .s_color_blocks_4_block, .s_event_list_item>.bg-delta, .s_color_blocks_2_block, .big-menu, .hero-bg"/>
        </xpath>
    </template>

    <!-- Font size -->
    <template id="font_size" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='blog-style']" position="after">
            <div data-js='typo_size' data-selector="h1, h2, h3, h4, h5, h6, p">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><i class="fa fa-text-height"/> Font size</a>
                    <ul class="dropdown-menu toggle">
                        <li data-select_class=""><a>Auto</a></li>
                        <li class="divider"/>
                        <li data-select_class="px14"><a>14px</a></li>
                        <li data-select_class="px16"><a>16px</a></li>
                        <li data-select_class="px18"><a>18px</a></li>
                        <li data-select_class="px22"><a>22px</a></li>
                        <li class="divider"/>
                        <li data-select_class="px30"><a>30px</a></li>
                        <li data-select_class="px36"><a>36px</a></li>
                        <li data-select_class="px42"><a>42px</a></li>
                        <li data-select_class="px50"><a>50px</a></li>
                        <li data-select_class="px60"><a>60px</a></li>
                    </ul>
                </li>
            </div>
        </xpath>
    </template>

    <!-- Reversed state for cubes snippet -->
    <template id="order_reverse" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='colorpicker']/li" position="after">
            <div data-js='cube-reversed' data-selector=".cube-big">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#"><i class="fa fa-refresh"/>Reversed</a>
                    <ul class="dropdown-menu toggle">
                        <li data-select_class=""><a>Auto</a></li>
                        <li data-select_class="reversed"><a>Reversed</a></li>
                    </ul>
                </li>
            </div>
        </xpath>
    </template>
</odoo>
