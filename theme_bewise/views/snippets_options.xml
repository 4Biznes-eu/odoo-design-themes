<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bewise_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']//ul" position="replace">
            <ul class="dropdown-menu">
                <li data-select_class="oe_custom_bg" data-choose_image="choose_image"><a><b>Choose an image...</b></a></li>
                <li><a style="background: none; padding: 5px; border-top: 1px solid #ddd;"/></li>

                <li data-select_class="bg-img-01"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_01.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-02"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_02.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-03"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_03.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-04"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_04.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-05"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_05.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-06"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_06.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-07"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_07.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-08"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_08.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-09"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_09.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-10"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_10.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-11"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_11.jpg" class="bg_option_menu_img center-block"/></a></li>
                <li data-select_class="bg-img-12"><a><img src="/theme_bewise/static/src/img/backgrounds/bg_img_thumb_12.jpg" class="bg_option_menu_img center-block"/></a></li>

                <li data-select_class=""><a>None</a></li>
            </ul>
        </xpath>

        <xpath expr="//div[@data-js='background']" position="attributes">
            <attribute name="data-selector">section, .carousel, .parallax, .s_color_blocks_2_block, .s_color_blocks_4_block, .s_big_image</attribute>
        </xpath>

        <xpath expr="//div[@data-js='background']" position="after">
            <div data-js='margin-x'
                 data-selector=".row.simple-stepwizard-row > .simple-stepwizard-step"
                 data-drop-in='.row.simple-stepwizard-row'/>

            <div data-js="scroll_nav"
            data-selector="section">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#">Scroll Nav</a>
                    <ul class="dropdown-menu">
                        <li data-select_class="o_scroll_nav"><a>Enabled</a></li>
                        <li data-select_class=""><a>Disabled</a></li>
                    </ul>
                </li>
            </div>

            <div data-selector="s_separator_multicolor"
                 data-drop-near="section, p, h1, h2, h3, blockquote, .well, .panel, .oe_share, .progress"/>

            <div data-selector=".s_separator_color"
                 data-drop-near="section, p, h1, h2, h3, blockquote, .well, .panel, .oe_share, .progress"/>

            <div data-selector=".s_separator_shade"
                 data-drop-near="section, p, h1, h2, h3, blockquote, .well, .panel, .oe_share, .progress"/>

            <div data-selector=".s_text_highlight"
                 data-drop-near="section, p, h1, h2, h3, blockquote, .well, .panel, .oe_share, .progress"/>
        </xpath>
    </template>

    <!-- Option colorpicker override default from website and add a new one for some object  -->
    <template id="options_colorpicker" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='colorpicker']" position="replace">
            <div data-js='colorpicker' data-selector="section, .carousel, .parallax, .s_big_image, .s_team_profile_box, .s_color_blocks_2_block, .s_color_blocks_4_block, .s_event_list time, .s_text_highlight, .s_color_blocks_img_title">
                <li class="dropdown-submenu">
                    <a tabindex="-1" href="#">Color</a>
                    <ul class="dropdown-menu">
                        <li>
                            <table class="colorpicker">
                                <tr>
                                    <td colspan="9">Theme colors</td>
                                </tr>
                                <tr>
                                    <td><button data-color="alpha"></button></td>
                                    <td><button data-color="beta"></button></td>
                                    <td><button data-color="gamma"></button></td>
                                    <td><button data-color="delta"></button></td>
                                    <td><button data-color="epsilon"></button></td>
                                </tr>
                                <tr>
                                    <td><button data-color="white"></button></td>
                                    <td><button data-color="black"></button></td>
                                </tr>
                            </table>
                        </li>
                    </ul>
                </li>
            </div>
        </xpath>
    </template>

